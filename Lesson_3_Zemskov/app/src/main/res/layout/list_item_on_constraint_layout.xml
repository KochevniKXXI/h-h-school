<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageViewExitAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_margin_horizontal"
        android:layout_marginTop="@dimen/list_item_image_margin_vertical"
        android:layout_marginBottom="@dimen/list_item_image_margin_vertical"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_menu_exit"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewOverline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_margin_horizontal"
        android:layout_marginTop="@dimen/list_item_padding_top"
        android:textAppearance="?textAppearanceBodyMedium"
        android:textColor="@color/gray_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Overline" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_spacer_after_exit_account_icon"
        android:layout_marginTop="@dimen/list_item_spacer_after_overline"
        android:layout_marginBottom="@dimen/list_item_padding_bottom"
        android:textAppearance="?textAppearanceBodyLarge"
        android:textColor="@color/gray_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewExitAccount"
        app:layout_constraintTop_toBottomOf="@+id/textViewOverline"
        app:layout_goneMarginStart="@dimen/screen_margin_horizontal"
        app:layout_goneMarginTop="@dimen/list_item_padding_bottom"
        tools:text="Headline" />

    <ImageView
        android:id="@+id/imageViewEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_image_margin_vertical"
        android:layout_marginEnd="@dimen/screen_margin_horizontal"
        android:layout_marginBottom="@dimen/list_item_image_margin_vertical"
        android:src="@drawable/baseline_edit_24"
        android:visibility="gone"
        android:background="?actionBarItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no" />
</androidx.constraintlayout.widget.ConstraintLayout>