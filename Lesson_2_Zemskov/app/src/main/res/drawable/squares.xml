<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="@dimen/foreground_square_bias"
        android:right="@dimen/foreground_square_bias">
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/square_side"
                android:height="@dimen/square_side" />
            <solid android:color="@color/red" />
        </shape>
    </item>

    <item
        android:left="@dimen/foreground_square_bias"
        android:top="@dimen/foreground_square_bias">
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/square_side"
                android:height="@dimen/square_side" />
            <solid android:color="@color/green" />
        </shape>
    </item>

</layer-list>